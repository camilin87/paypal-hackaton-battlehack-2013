@{
    ViewBag.Title = "Event";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Funds4Kids</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="container">
            <br/><br/><br/>
            <div class="row">
                <div class="span12 pagination-centered">
                    <h1>Hialeah Senior High Baseball Team 2013</h1>
                </div>
            </div>
            <br/><br/>
            <div class="row">
                <div class="span12 pagination-centered">
                    <div class="span1"></div>
                    <div class="span10">
                        <div class="thumbnail" style="margin-left: 23%; margin-right: 23%;">
                            <img src="../../Images/u2_normal.jpg" alt="team"/>
                        </div>
                        <br/>
                        <div class="alert alert-success text-left" style="font-size: 2.85em; line-height: 50px;">
                            <p>
                                This kids desperately need new uniforms. Please help them reach their goal.
                                <a> More...</a>
                            </p>
                        </div>
                    </div>
                    <div class="span1"></div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="span12 pagination-centered">
                    <div class="span1"></div>
                    <div class="span10">
                        <div class="progress progress-success" style="height: 40px;">
                            <div class="bar" style="width: 40%"></div>
                        </div>
                        <div class="pull-right" style="font-size: 50px;">
                            <p>$100</p>
                        </div>
                    </div>
                    <div class="span1"></div>
                </div>

            </div>
            <br/><br/>
            <div class="row">
                <div class="span12 pagination-centered">
                    <div class="span1"></div>
                    <div class="span10" style="line-height: 60px">
                        @*<div class="btn-group">*@
                        <a onclick="submitPayment(1)" class="btn-primary donate-button" >&nbsp;&nbsp;$1&nbsp;&nbsp;</a>
                        <a onclick="submitPayment(5)" class="btn-warning donate-button">&nbsp;&nbsp;$5&nbsp;&nbsp;</a>
                        <a onclick="submitPayment(10)" class="btn-success donate-button">&nbsp;$10&nbsp;</a>
                        @*<a class="btn btn-large btn-primary" style="margin-right: 2%; margin-left: 2%">&nbsp;$15&nbsp;</a>
                        <a class="btn btn-large btn-danger" style="margin-right: 2%; margin-left: 2%">&nbsp;$20&nbsp;</a>
                        <a class="btn btn-large btn-inverse" style="margin-right: 2%; margin-left: 2%">&nbsp;$25&nbsp;</a>*@
                        @*<a class="btn btn-large btn-success">$20</a>*@
                        @*</div>*@
                    </div>
                    <div class="span1"></div>
                </div>
            </div>
            <br/><br/>
        </div>
        <!-- .container -->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/boostrap")
    </body>
</html>

