<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Funds4Kids</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="navbar">
                <div class="container">
                    <div class="float-right">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                        @if(User.Identity.IsAuthenticated)
                        {
                            <div style="display: inline">@Html.ActionLink("Home", "Index", "Home", new {@class = "navbar-brand", @style="color: #ffffff"})</div>
                            <div style="display: inline"><a href="@Url.Action("CreateEvent", "Events")" class="navbar-brand" style="color: #ffffff">Create New Event</a></div>
                        }
                    </div>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            @*<section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>*@
            @RenderBody()
        </div>
        <footer>
            @*<div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>*@
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/boostrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
